<div class="row mt-3">
    <div class="col-md-8 offset-md-2">
        <h3 class="text-center">
            View All Products
        </h3>
        <table class="table table-dark table-hover table-bordered mt-2">
            <tr>
                <th>S.No.</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Product Image</th>
                <th>Product Category</th>
            </tr>
            <% result.forEach(function(pro, index){ %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= pro.name %></td>
                    <td><%= pro.price %></td>
                    <td><img src="/product_images/<%= pro.image  %>" height="80" width="80" /></td>
                    <td><%= pro.category %></td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>